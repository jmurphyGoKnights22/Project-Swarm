<?xml version="1.0"?>

<launch>
    <arg name="name" default="uav1"/>

    <node pkg="hector_mapping" type="hector_mapping" name="hector_mapping" output="screen" >
        <param name="pub_map_odom_transform" value="true"/>
        <param name="map_frame" value="$(arg name)/map" />
        <param name="base_frame" value="$(arg name)/base_link" />
        <param name="odom_frame" value="$(arg name)/base_link" />
        <param name="scan_topic" value="scan"/>
        <param name="tf_map_scanmatch_transform_frame_name" value="$(arg name)/scanmatcher_frame" />
        <param name="map_size" value="2000"/>
        <param name="laser_max_dist" value="100"/>
        <param name="pub_odometry" value="true"/>
        <param name="map_resolution" value="0.25"/>
        <param name="pub_map_odom_transform" value="false"/>
    </node>

    <!--node pkg="laser_scan_matcher" type="laser_scan_matcher_node" name="laser_scan_matcher_node" output="screen">
        <param name="base_frame" value="$(arg name)/base_link"/>
        <param name="fixed_frame" value="$(arg name)/odom"/>
        <param name="use_odom" value="true"/>
        <param name="use_imu" value="false"/>
        <param name="use_vel" value="true"/>
    </node>

    <node pkg="gmapping" type="slam_gmapping" name="slam_gmapping" output="screen">
        <param name="base_frame" value="$(arg name)/base_link"/>
        <param name="odom_frame" value="$(arg name)/odom"/>
        <param name="map_frame" value="$(arg name)/map"/>
        <param name="maxUrange" value="30.0"/>
        <param name="maxRange" value="30.0"/>
    </node-->
</launch>